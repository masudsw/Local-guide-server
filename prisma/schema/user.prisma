model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  profilePhoto  String? 
  role         Role 
  bio          String?
  status      UserStatus @default(ACTIVE)
  languages    String[]
  guideProfile     GuideProfile?
  listings         Listing[]           // Guide → Listings
  touristBookings  Booking[] @relation("TouristBookings")
  reviews          Review[]
  availabilities   GuideAvailability[] // Guide → Availability
}




